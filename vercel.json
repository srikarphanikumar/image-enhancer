{
    "version": 2,
    "name": "image-enhancer",
    "builds": [
        {
            "src": "backend/src/app.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/src/app.js"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/build/$1"
        }
    ]
}